<body>
  <h2>Create New Book</h2>

  <form>
    <!-- For the title input, set the correct type, name, and required attributes according to the bookSchema  -->
    <label>Title: </label>
    <input type="text" name="title" /></br>

    <!-- Repeat for Author -->

    <label>Author: </label>
    <input type="text" name="author" /></br>

    <!-- Repeat for Year Published -->

    <label>Year Published: </label>
    <input type="number" name="yearPublished" /></br>

    <label>URL:</label>
    <input type="string" name="URL" /></br>

    <label>image_URL:</label>
    <input type="string" name="image_URL" /></br>

    <!-- Set the button type -->
    <button type="submit">Submit</button>
  </form>

  <h1>List of Books</h1>

  <% for(let i = 0; i < books.length; i++) { %>
    <div class="book-box">
      <p><b>Title:</b> <%= books[i].title %></p>
      <p><b>Author:</b> <%= books[i].author %></p>
      <p><b>Year Published:</b> <%= books[i].yearPublished %></p>
      <button class = "delForm" id="<%= books[i]._id %>" type="button"> Delete </button>
    </div>
  <% } %>


